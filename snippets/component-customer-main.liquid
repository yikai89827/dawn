<div class="main-wrap">
    <div class="text">探索品质生活</div>
    <button style="font-size: 16px;">获取所有</button>
</div>

<script>
  document.querySelector('.main-wrap').addEventListener('click', function(e) {
    console.log('点击了卡片列表组件',e);
    location.href = '/collections/all';
  });
